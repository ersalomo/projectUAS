<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_dark"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/text_login"
            android:layout_width="180dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_height="34dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="76dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <androidx.cardview.widget.CardView
            android:layout_width="386dp"
            android:layout_height="288dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="44dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.027">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="386dp"
                android:layout_height="243dp">
            <ImageView
                    android:layout_width="147dp"
                    android:layout_height="144dp"
                    app:srcCompat="@drawable/security_for_user"
                    android:id="@+id/bLoginUser"
                    android:contentDescription="@string/text_user"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="36dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.393"/>
            <TextView
                    android:text="@string/text_admin"
                    android:layout_width="84dp"
                    android:layout_height="28dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
                    app:layout_constraintTop_toBottomOf="@+id/bLoginAdmin" android:layout_marginTop="12dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                    android:id="@+id/textView3"/>
            <ImageView
                    android:layout_width="159dp"
                    android:layout_height="154dp"
                    app:srcCompat="@drawable/security_for_admin"
                    android:id="@+id/bLoginAdmin"
                    android:contentDescription="@string/text_admin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.444"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"/>
            <TextView
                    android:textColor="@color/black"
                    android:text="@string/text_user"
                    android:layout_width="84dp"
                    android:layout_height="28dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/bLoginUser"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.583"
                    app:layout_constraintStart_toEndOf="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.637"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>