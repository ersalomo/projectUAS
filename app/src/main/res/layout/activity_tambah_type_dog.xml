<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.admin.TambahTypeDog">

    <TextView
            android:id="@+id/tvGetJenis"
            android:textSize="30sp"
            android:text="Jenis"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="304dp"
            android:layout_height="42dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintHorizontal_bias="0.579"/>

    <ImageView
            android:id="@+id/ivTypeDog"
            android:src="@drawable/dogy2"
            android:layout_width="275dp"
            android:layout_height="227dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvGetJenis" android:layout_marginTop="8dp"/>
    <TextView
            android:id="@+id/tvGetDesc"
            android:text="Desc"
            android:textSize="20sp"
            android:maxLines="3"
            android:layout_width="314dp"
            android:layout_height="102dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivTypeDog" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.053"/>
    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="388dp"
            android:layout_height="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textInputLayout"
            app:layout_constraintHorizontal_bias="0.478" app:layout_constraintTop_toBottomOf="@+id/tvGetDesc">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_marginHorizontal="10dp"
                android:layout_width="363dp"
                android:shadowRadius="10"
                android:paddingVertical="5dp"
                android:id="@+id/et_nameDoggy"
                android:inputType="text"
                android:padding="20dp"
                android:hint="name"
                android:maxLines="1"
                android:layout_height="79dp"
                android:layout_marginTop="20dp" android:minHeight="48dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
            android:id="@+id/bAddType"
            android:text="Tambah Data"
            android:layout_width="272dp"
            android:layout_height="72dp"
            android:backgroundTint="@color/secondary_text"
            app:cornerRadius="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            android:layout_marginTop="28dp" app:layout_constraintHorizontal_bias="0.496"/>


</androidx.constraintlayout.widget.ConstraintLayout>