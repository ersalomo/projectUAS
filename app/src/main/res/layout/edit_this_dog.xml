<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
            android:id="@+id/imageDog"
            android:layout_width="126dp"
            android:layout_height="108dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <EditText
            android:id="@+id/getEdName"
            android:text="name"
            android:layout_width="287dp"
            android:layout_height="43dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintTop_toBottomOf="@+id/imageDog" android:layout_marginTop="16dp"/>
    <EditText
            android:id="@+id/getEdJenis"
            android:text="jenis"
            android:layout_width="286dp"
            android:layout_height="47dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/getEdName"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.496"/>
    <EditText
            android:id="@+id/getEdDesc"
            android:text="desc"
            android:layout_width="289dp"
            android:layout_height="55dp"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/getEdJenis"
            android:layout_marginTop="12dp"/>
    <EditText
            android:id="@+id/getUriDog"
            android:text="uri image dog"
            android:layout_width="292dp"
            android:layout_height="37dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/getEdDesc"
            android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.515"/>

</androidx.constraintlayout.widget.ConstraintLayout>