<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.admin.ActivityMakananAnjing">


    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="401dp"
            android:layout_height="191dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.428" android:id="@+id/textInputLayout2">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="337dp"
                    android:id="@+id/et_namaMKN"
                    android:inputType="text"
                    android:padding="20dp"
                    android:hint="nama makanan"
                    android:maxLines="1"
                    android:layout_height="55dp"
                    android:minHeight="48dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="13dp"
                    android:layout_marginEnd="11dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp"
                    app:layout_constraintHorizontal_bias="0.48"/>
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="336dp"
                    android:id="@+id/et_jenisMKN"
                    android:inputType="text"
                    android:padding="20dp"
                    android:hint="jenis makanan"
                    android:maxLines="1"
                    android:layout_height="58dp"
                    android:minHeight="48dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="13dp"
                    android:layout_marginEnd="11dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.461" app:layout_constraintTop_toBottomOf="@+id/et_namaMKN"
                    android:layout_marginTop="4dp"/>
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="343dp"
                    android:id="@+id/et_beratMKN"
                    android:inputType="text"
                    android:padding="20dp"
                    android:hint="berat makanan"
                    android:maxLines="1"
                    android:layout_height="56dp"
                    android:minHeight="48dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="13dp"
                    android:layout_marginEnd="11dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/et_jenisMKN"
                    android:layout_marginTop="4dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_listMkn"
            android:layout_width="399dp"
            android:layout_height="467dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mbTambah"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="1.0"/>
    <com.google.android.material.button.MaterialButton
            android:layout_width="251dp"
            android:layout_height="57dp"
            app:cornerRadius="15dp"
            android:text="tambah"
            android:id="@+id/mbTambah"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" android:layout_marginTop="4dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>