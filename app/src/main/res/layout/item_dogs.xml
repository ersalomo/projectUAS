<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:id="@+id/my_cardView"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

        <ImageView
                android:id="@+id/imgDog"
                android:src="@drawable/dogy2"
                android:layout_width="99dp"
                android:layout_height="92dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="4dp"
                app:layout_constraintVertical_bias="0.28"/>
        <TextView
                android:id="@+id/tvtNamaDog"
                android:text="nama"
                android:textStyle="bold"
                android:layout_width="187dp"
                android:layout_height="27dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@+id/imgDog" android:layout_marginStart="4dp"/>
        <TextView
                android:textStyle="normal"
                android:id="@+id/tvJenisDog"
                android:text="jenis"
                android:layout_width="249dp"
                android:layout_height="28dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintTop_toBottomOf="@+id/tvtNamaDog"
                android:layout_marginTop="4dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgDog" app:layout_constraintHorizontal_bias="0.235"/>
        <TextView
                android:textStyle="normal"
                android:id="@+id/tvdescDog"
                android:text="desc"
                android:layout_width="257dp"
                android:layout_height="50dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintTop_toBottomOf="@+id/tvJenisDog"
                app:layout_constraintBottom_toTopOf="@+id/guideline3"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.384" app:layout_constraintStart_toEndOf="@+id/imgDog"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="56dp"
                android:text="edit"
                android:id="@+id/bEdit"
                android:backgroundTint="@color/divider"
                android:textSize="6sp"
                android:textColor="@color/black"
                android:layout_height="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/tvtNamaDog"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline3"
                app:layout_constraintGuide_begin="123dp"
                android:orientation="horizontal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>