<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_dark"
        tools:context=".auth.LoginAdminActivity">

    <ImageView
            android:src="@drawable/security_for_admin"
            android:layout_width="298dp"
            android:layout_height="138dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/imageView" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.495"/>
    <androidx.cardview.widget.CardView
            android:layout_width="385dp"
            android:layout_height="377dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/cardView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.615"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintVertical_bias="0.18">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="358dp">
            <TextView
                    android:text="LOGIN"
                    android:layout_width="117dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="23sp"
                    android:textColor="@color/black"
                    android:layout_height="35dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="24dp" android:id="@+id/textView"/>
            <EditText
                    android:inputType="textPersonName"
                    android:layout_width="269dp"
                    android:hint="email address"
                    android:layout_height="44dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/emailAdmin"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    android:layout_marginTop="16dp"
                    app:layout_constraintHorizontal_bias="0.497"/>
            <EditText
                    android:inputType="textPassword"
                    android:layout_width="269dp"
                    android:hint="password"
                    android:layout_height="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/passswordAdmin"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintTop_toBottomOf="@+id/emailAdmin"
                    android:layout_marginTop="32dp"/>
            <com.google.android.material.button.MaterialButton
                    android:layout_width="258dp"
                    android:layout_height="58dp"
                    android:text="LOGIN"
                    android:backgroundTint="@color/primary_dark"
                    app:cornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/bLoginAdmin"
                    app:layout_constraintTop_toBottomOf="@+id/passswordAdmin"
                    android:layout_marginTop="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>