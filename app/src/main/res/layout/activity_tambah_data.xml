<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/primary_dark"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="@string/tambah_data"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="339dp"
            android:layout_height="43dp" android:id="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="76dp"/>
    <androidx.cardview.widget.CardView
            app:cardCornerRadius="25dp"
            android:layout_width="365dp"
            android:layout_height="442dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintVertical_bias="0.193">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="447dp"
                android:layout_width="match_parent">
            <EditText
                    android:id="@+id/edNama"
                    android:hint="name..."
                    android:layout_width="345dp"
                    android:layout_height="50dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="56dp" app:layout_constraintHorizontal_bias="0.493"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <EditText
                    android:id="@+id/edJenis"
                    android:hint="jenis..."
                    android:layout_width="348dp"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.542"
                    app:layout_constraintTop_toBottomOf="@+id/edNama" android:layout_marginTop="24dp"/>
            <EditText
                    android:layout_width="345dp"
                    android:hint="desciption..."
                    android:maxLines="2"
                    android:layout_height="63dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edJenis"
                    android:id="@+id/edDesc"
                    android:layout_marginTop="20dp"
                    app:layout_constraintHorizontal_bias="0.619"/>
            <EditText
                    android:id="@+id/uriImage"
                    android:hint="type is uri"
                    android:layout_width="335dp"
                    android:layout_height="57dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.566"
                    app:layout_constraintTop_toBottomOf="@+id/edDesc"
                    android:layout_marginTop="16dp"/>
            <com.google.android.material.button.MaterialButton
                    android:text="save"
                    android:id="@+id/bTambahData"
                    app:cornerRadius="20dp"
                    android:layout_width="292dp"
                    android:backgroundTint="@color/primary_dark"
                    android:layout_height="59dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.492"
                    app:layout_constraintTop_toBottomOf="@+id/uriImage"
                    android:layout_marginTop="24dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>